@model IEnumerable<Beer.Model.Inhoud>

@{
    ViewBag.Title = "Index met inhoud";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Voeg nieuwe inhoudshoeveelheid toe", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Capaciteit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Eenheid)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Capaciteit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eenheid)
            </td>
            <td>
                @if ((item.AspNetUsersId) != null)
                {
                    @Html.ActionLink("Bewerken", "Edit", new { id = item.Id })
                    <text> | </text>
                    @Html.ActionLink("Verwijder", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
