@model IEnumerable<Beer.Model.Locatie>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Voeg locatie toe!", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Temperatuur)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Temperatuur)
            </td>
            <td>
                @if ((item.AspNetUsersId) != null)
                {
                    @Html.ActionLink("Bewerk", "Edit", new { id = item.Id });
                    <text> | </text>
                    @Html.ActionLink("Verwijder", "Delete", new { id = item.Id });
                }
            </td>
        </tr>
    }

</table>
